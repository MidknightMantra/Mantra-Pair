NODE_ENV=production
PORT=3000

# Protect the pairing endpoints (recommended)
PAIR_API_KEY=change-me

# Required when EXPORT_ENCRYPTED=true in production
SESSION_SECRET=change-me-too

# Comma-separated list of allowed browser origins (optional but recommended if hosting UI separately)
# Example:
# CORS_ORIGINS=https://mantra-pair.up.railway.app,https://yourdomain.com
CORS_ORIGINS=

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Session lifecycle
SESSION_TTL_MS=300000
SESSION_IDLE_TTL_MS=120000
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# Session export format
EXPORT_ENCRYPTED=true
EXPORT_LEGACY=false
LOG_SESSION_EXPORTS=false

